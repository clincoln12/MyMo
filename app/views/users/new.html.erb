<div class="center">
  <h1>Signup</h1>
</div>

<%= form_for(@user) do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username, class: "form-control" %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>
  
  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>
  <br>
  <%= f.submit "Submit", class: "btn btn-primary" %>

<% end %>